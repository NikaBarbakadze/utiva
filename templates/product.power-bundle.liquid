                    <div class="rte-setting text-spacing">
                      <p>Those most concerned with recovery from antibiotic usage and counter antibiotic side effects such as diarrhea.</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div> 
          <!-- End Recommended -->
          {% section 'power-bundle-sections' %}
        </div>
      </div>
      <div class="tab-pane fade" id="pills-ingred" role="tabpanel" aria-labelledby="pills-ingred-tab">
        {% section 'power-bundle-sections-ingredients' %} 
        {% section 'power-bundle-sections' %}
      </div>
      <div class="tab-pane fade" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab"> 
			  <div 
          id="stamped-main-widget" 
          class="stamped-main-widget" 
          data-product-id="{{ product.id }}"
          data-name="{{ product.title | escape }}"
          data-url="{{ shop.url }}{{ product.url }}"
          data-image-url="{{ product.featured_image | product_img_url: "large" |replace: " ? ", " % 3F" | replace: "& "," % 26"}}"
          data-description="{{ product.description | escape }}"
          data-product-sku="{{product.handle}}"
          data-product-type="{{product.type}}">
        </div>

        {% section 'power-bundle-sections-reviews' %} 
        {% section 'power-bundle-sections' %}

      </div> 
      <div class="tab-pane fade" id="pills-faq" role="tabpanel" aria-labelledby="pills-faq-tab">
        <div class="container" style="max-width: 1200px; padding-top: 50px; margin-bottom: 100px;">
          {% section 'power-bundle-faq' %}
        </div>
        
        {% section 'power-bundle-sections' %}
      </div>
  </div>
</div>
         
