{% if product.metafields.custom.proven_effectiveness_main_text != blank %}

<style>
  .custom-proven-effectivness .text_1_wrapper p,
  .custom-proven-effectivness .text_1_wrapper a {
    color: #1C1C1C;
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: 28px;
  }
  .custom-proven-effectivness .text_1_wrapper a {
    text-decoration-line: underline;
  }
  .custom-proven-effectivness .text_2_wrapper p {
    color: #1c1c1ccc;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 19.6px;
  }
  @media screen and (min-width: 770px) {
    .custom-proven-effectivness .text_1_wrapper p,
    .custom-proven-effectivness .text_1_wrapper a {
      font-size: 24px;
      line-height: 33.6px;
      letter-spacing: -0.24px;
    }
    .custom-proven-effectivness .text_2_wrapper p {
      font-size: 16px;
      line-height: 22.4px;
    }
  }
</style>

<div class="px-6 pt-8 pb-12 md:py-20 md:overflow-hidden md:px-[9.6rem]">
  <div class="flex flex-col md:flex-row">
    <h2 class="text-[32px] leading-[38.4px] -tracking-[0.64px] text-[#1C1C1C] font-medium mb-6 md:w-full md:text-5xl md:!leading-[52.8px] md:-tracking-[0.96px]">{{ section.settings.title }}</h2>
    <div class="md:w-[65rem]">
      <div class="text_1_wrapper mb-4 md:mb-3">
        {{ product.metafields.custom.proven_effectiveness_main_text | metafield_tag }}
      </div>
      <div class="text_2_wrapper">
        {{ product.metafields.custom.proven_effectiveness_sub_text }}
      </div>
    </div>
  </div>
  <div class="block md:hidden">
    <img
      src="{{ product.metafields.custom.proven_effectiveness_mobile_graph | img_url: 'master' }}"
      class="mt-[3rem] w-full"
      alt="graph">
  </div>
  <div class="hidden md:!flex items-center justify-between gap-x-10">
    <img src="{{ product.metafields.custom.proven_effectiveness_desktop_graph | img_url: 'master' }}" alt="graph">
  </div>
</div>

{% endif %}

{% schema %}
  {
    "name": "Proven effectiveness",
    "tag": "section",
    "class": "custom-proven-effectivness",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ]
  }
{% endschema %}