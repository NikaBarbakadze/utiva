<div class="page-width pt-12 pb-[6rem] px-6 md:flex md:items-center md:justify-between md:gap-x-6 md:pt-[10rem] md:pb-20">
  <div class="md:w-[50rem]">
    <h2 class="text-[3.2rem] leading-[3.84rem] -tracking-[0.064rem] text-[#1c1c1c] font-medium mb-3 md:text-5xl md:font-medium md:-tracking-[0.096rem] md:leading-[5.28rem] md:mb-5">{{ section.settings.title }}</h2>
    <div class="flex flex-col gap-y-4 mb-8 md:mb-0">
      {% for block in section.blocks %}
        <p class="text-base font-normal leading-[2.24rem] text-[#1c1c1ccc] md:text-xl">
          {{ block.settings.text }}
        </p>
      {% endfor %}
    </div>
  </div>
  <img
    class="rounded-[1.6rem] md:max-w-[60rem]"
    src="{{ section.settings.image | img_url: 'master' }}"
    alt="utiva for good">
</div>

{% schema %}
  {
    "name": "Giving back",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "name": "Paragraph",
        "type": "pars",
        "settings": [
          {
            "type": "inline_richtext",
            "label": "Paragraph",
            "id": "text"
          }
        ]
      }
    ]
  }
{% endschema %}