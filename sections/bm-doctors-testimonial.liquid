<div class="bm-doctors-testimonial">
  <div class="page-width">
    <div class="bm-doctors-testimonial-main">
      {% if section.settings.bm_doctors_testimonial_title != blank %}
      <h2 class="bm-doctors-testimonial-title">
        {{section.settings.bm_doctors_testimonial_title}}
      </h2>
      {% endif %}
      <div class="bm-doctors-testimonial-slider">
        {% for block in section.blocks %}
        <div> 

          <div class="bm-doctors-testimonial-slider-main">
            <div class="bm-doctors-testimonial-slider-main-content">
              <div class="bm-doctors-testimonial-slider-main-icon">
                <img loading="lazy" src="https://cdn.shopify.com/s/files/1/0060/4677/7455/files/da21dde662a19a4b8a6e17048660983a.png?v=1646631679" alt="">
              </div>
              <div class="bm-doctors-testimonial-slider-contentarea">
                {% if block.settings.bm_doctors_testimonial_slider_main_text != blank %}
                <p class="bm-doctors-testimonial-slider-main-text">
                  {{block.settings.bm_doctors_testimonial_slider_main_text}}
                </p>
                {% endif %}

                {% if block.settings.bm_doctors_testimonial_slider_main_title != blank %}
                <h2 class="bm-doctors-testimonial-slider-main-name bm-doctors-testimonial-slider-main-name-desktop">
                  {{block.settings.bm_doctors_testimonial_slider_main_title}}
                </h2>
                {% endif %}
              </div>
              <div class="bm-doctors-testimonial-slider-main-img">
                {% if block.settings.bm_doctors_testimonial_slider_main_img != blank %}
                <div class="bm-doctors-testimonial-slider-img">
                  <img loading="lazy" src="{{block.settings.bm_doctors_testimonial_slider_main_img | img_url: 'master' }}" alt="">
                </div>
                {% endif %}
                {% if block.settings.bm_doctors_testimonial_slider_main_title != blank %}
                <h2 class="bm-doctors-testimonial-slider-main-name bm-doctors-testimonial-slider-main-name-moba">
                  {{block.settings.bm_doctors_testimonial_slider_main_title}}
                </h2>
                {% endif %}
              </div>
            </div>
            {% if block.settings.bm_doctors_testimonial_slider_button_Link != blank %}
            <div class="bm-doctors-testimonial-slider-button">
              <a href="{{block.settings.bm_doctors_testimonial_slider_button_Link}}" title="" class="js-no-transition" target="_blank">
                {{block.settings.bm_doctors_testimonial_slider_button_title}}
              </a>
            </div>
            {% endif %}

          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Doctors Testimonial",
    "settings": [
		 {
            "type": "text",
            "id": "bm_doctors_testimonial_title",
            "label": "Heading"
         }
	],
	"blocks": [
     {
       "name": "Testimonial",
       "type": "Testimonial",
       "settings": [
		 { 
            "type": "image_picker",
            "id": "bm_doctors_testimonial_slider_main_img",
            "label": "Doctor Image"
         },
		 {
            "type": "textarea",
            "id": "bm_doctors_testimonial_slider_main_text",
            "label": "Testimonial Text"
         },
		 {
            "type": "text",
            "id": "bm_doctors_testimonial_slider_main_title",
            "label": "Doctor name"
         },
		 {
            "type": "text",
            "id": "bm_doctors_testimonial_slider_button_title",
            "label": "Button Text"
         },
		 {
            "type": "url",
            "id": "bm_doctors_testimonial_slider_button_Link",
            "label": "Button Link"
         }
       ]
     }
   ],
    "presets": [
      {
        "name": "Doctors Testimonial",
        "category": "BM Sections"
      }
    ]
  }
{% endschema %}

<style>
.bm-doctors-testimonial .slick-prev, .slick-next {
  top: 34%;
}
</style>