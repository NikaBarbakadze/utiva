<div class="bg-[#ceb39e26]">
  <div class="page-width flex flex-col py-12 gap-y-8 md:py-20 md:gap-y-10">
    <div class="flex flex-col gap-y-3 md:flex-row md:justify-between md:items-start">
      <h2 class="text-[3.2rem] leading-[3.84rem] -tracking-[0.064rem] font-medium text-[#1c1c1c] md:text-[4.8rem] md:leading-[5.28rem] md:-tracking-[0.096rem] md:w-[50rem]">{{ section.settings.title }}</h2>
      <p class="text-base leading-[2.24rem] font-normal text-[#1C1C1CCC] md:text-2xl md:leading-[3.36rem] md:-tracking-[0.024rem] md:w-[61rem]">{{ section.settings.text }}</p>
    </div>
    <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-center">
      <img
        class="w-full"
        src="{{ section.settings.img1 | img_url: 'master' }}"
        alt="More active molecules (PACs) than most cranberry supplements">
      <img
        class="w-full"
        src="{{ section.settings.img2 | img_url: 'master' }}"
        alt="Utiva vs Competitors' pills">
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Concentrate section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Powerful concentrate = tiny format"
      }, {
        "type": "inline_richtext",
        "id": "text",
        "label": "Text",
        "default": "Our smallest pill size thanks to a powerful extract and concentration process of high-quality soluble PACs."
      }, {
        "type": "image_picker",
        "id": "img1",
        "label": "Image 1"
      }, {
        "type": "image_picker",
        "id": "img2",
        "label": "Image 2"
      }
    ]
  }
{% endschema %}