<section class="page-width">
  {% if section.settings.heading != blank %}
    <p class="heading">{{ section.settings.heading }}</p>
  {% endif %}
  <div class="benefits-wrapper">
    {% for block in section.blocks %}
      <div class="benefit">{{ block.settings.text }}</div>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "Wellness Benefits",
    "class": "wellness-benefits",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks":[
      {
        "type": "benefit",
        "name": "Benefit",
        "settings":[
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ]
  }
{% endschema %}
