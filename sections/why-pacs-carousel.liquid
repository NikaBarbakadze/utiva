<style>
  .game_plan_subtext em {
    color: #FFF;
    border-radius: 40px;
    background: #C33635;
    padding: 2px 10px;
    text-align: center;
    font-style: normal;
    line-height: 25.2px;
  }
  {% if section.settings.show_slider %}
    .loop--slider {
      background: white;
      height: 38px;
      overflow: hidden;
      position: relative;
      width: 100%;
    }

    .loop--slider::after {
      right: 0;
      top: 0;
      -webkit-transform: rotateZ(180deg);
      transform: rotateZ(180deg);
    }

    .loop--slider .track {
      -webkit-animation: scroll 40s linear infinite;
      animation: scroll 40s linear infinite;
      display: -webkit-box;
      display: flex;
      width: 100%;
    }

    @-webkit-keyframes scroll {
      0% {
        -webkit-transform: translateX(0);
        transform: translateX(0);
      }
      100% {
        -webkit-transform: translateX(calc(-150px * 7));
        transform: translateX(calc(-150 * 7));
      }
    }
    @keyframes scroll {
      0% {
        -webkit-transform: translateX(0);
        transform: translateX(0);
      }
      100% {
        -webkit-transform: translateX(calc(-150px * 7));
        transform: translateX(calc(-150px * 7));
      }
    }
  {% endif %}
</style>

{% if section.settings.show_slider %}
  <div class="loop--slider" id="custom-carousel-section">
    <div class="track">
      <div class="slide flex items-center justify-center gap-x-8 py-2 bg-[#d0c6bf26]">
        {% for i in (0..35) %}
          <p class="text-[#CEB39E] text-base leading-[2.24rem] font-medium uppercase">{{ section.settings.carousel_text }}</p>
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}
<div class="bg-[#FCFCFA]">
  <div class="page-width px-6 py-[6rem] flex flex-col gap-y-8 md:flex-row md:justify-between md:py-20 md:gap-x-6 lg:items-center">
    <div class="flex flex-col gap-y-4 md:gap-y-8 md:w-[72rem]">
      <h2 class="text-[3.2rem] leading-[3.84rem] -tracking-[0.064rem] text-[#1c1c1c] font-medium md:text-5xl md:leading-[5.28rem] md:-tracking-[0.096rem] md:w-[47rem]">{{ section.settings.title }}</h2>
      <p class="text-[#1c1c1ccc] font-normal text-base md:text-xl game_plan_subtext max-w-[90%]">{{ section.settings.subtitle }}</p>
    </div>
    <div class="p-8 bg-[#ceb39e1a] flex flex-col gap-y-4 rounded-[1.6rem] md:rounded-[2.4rem] md:w-[40rem]">
      <div class="flex flex-col gap-y-1">
        <h3 class="text-center text-[#1C1C1C] font-medium text-2xl leading-[2.88rem] -tracking-[0.048rem]">{{ section.settings.word }}</h3>
        <p class="text-base text-[#1c1c1c] font-normal leading-[2.24rem] text-center">{{ section.settings.pro }}</p>
      </div>
      <hr class="w-full h-px bg-[#C33635]">
      <p class="text-base leading-[2.24rem] font-normal text-center text-[#1c1c1ccc]">{{ section.settings.subtext }}</p>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Carousel section",
    "class": "custom-carousel-seciton",
    "tag": "section",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_slider",
        "label": "Show Slider",
        "default": true
      },
      {
        "type": "text",
        "id": "carousel_text",
        "label": "Carousel text",
        "default": "discover"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Revolutionize your UTI prevention game plan"
      },
      {
        "type": "inline_richtext",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "The active ingredient – proanthocyanidins or PACs for short, make all the difference. Taken once daily, this molecule which is found in cranberries and when dosed at is clinically proven to help prevent UTIs."
      }, {
        "type": "header",
        "content": "Aside box content"
      }, {
        "type": "text",
        "id": "word",
        "label": "Word",
        "default": "Proanthocyanidins"
      }, {
        "type": "text",
        "id": "pro",
        "label": "Pronunciation",
        "default": "[Prow·an·thow·sai·a·nuh·dnz]"
      }, {
        "type": "inline_richtext",
        "id": "subtext",
        "label": "Subtext",
        "default": "or PACs for short, are the active molecules found in cranberries that fight UTI-causing bacteria"
      }
    ]
  }
{% endschema %}