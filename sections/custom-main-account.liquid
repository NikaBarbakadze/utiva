        </div>
    {%- endpaginate -%}
</section>

<script defer>
    document.addEventListener('DOMContentLoaded', ()=> {
      const tabs = new Tabby('[data-tabs]');

      const infoBoxes = document.querySelectorAll(".information_box");
      infoBoxes.forEach(box => {
        const editBtn = box.querySelector(".information_header button");
        const saveBtn = box.querySelector(".information_header .information_save");
        
        editBtn.addEventListener("click", () => {
            const { edit } = editBtn.dataset;
            box.classList.add("user_editing");

            if (edit === "personal") {
                saveBtn.addEventListener("click", () => {
                    box.classList.remove("user_editing");
                });
            } else if (edit === "password") {
                const currentPasswordInputs = box.querySelectorAll('input[type="password"]');

                currentPasswordInputs.forEach(passwordInput => {
                    const showPasswordIcon = passwordInput.parentNode.querySelector(".pass_show");
                    const hidePasswordIcon = passwordInput.parentNode.querySelector(".pass_hide");

                    showPasswordIcon.addEventListener("click", () => {
                        passwordInput.setAttribute("type", "text");
                        passwordInput.parentNode.classList.add("password_showing");

                        hidePasswordIcon.addEventListener("click", () => {
                            passwordInput.setAttribute("type", "password");
                            passwordInput.parentNode.classList.remove("password_showing");
                        });
                    });
                });

                saveBtn.addEventListener("click", () => {
                    box.classList.remove("user_editing");
                });
            } else if (edit === "address") {
                saveBtn.addEventListener("click", () => {
                    box.querySelector(".address_update").click();
                });
            }
        });
      });
    });
    window.addEventListener('load', () => {
        typeof CustomerAddresses !== 'undefined' && new CustomerAddresses();
    });
</script>