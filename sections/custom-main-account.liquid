{{ 'custom-main-account.css' | asset_url | stylesheet_tag }}
<script src="{{ 'customer.js' | asset_url }}" defer></script>

<section class="custom-main-account">
    <div class="flex flex-col lg:flex-row items-stretch justify-start gap-x-6">
        <div class="sidebar lg:min-h-[65rem] flex flex-col justify-between px-[1.5rem] lg:px-24 py-12 bg-[#F2F2F0] border-r border-[#1C1C1C1F]">
           <div>
              <ul data-tabs>
                  <li>
                      <a data-tabby-default href="#profile">Profile</a>
                  </li>
                  <li>
                      <a href="#orders">Order history</a>
                  </li>
              </ul>
              <div class="loop-custom-url">{% render 'loop-subscriptions', type: 'customer-portal-link' %}</div>
              <a class="custom-link-button" href="/pages/rewards">My Rewards</a>
           </div>
           <div>
              <p class="text-base text-[#1c1c1c] font-normal leading-[22.4px]">Have questions? Visit our</p>
              <a href="/pages/faq" class="text-[#C33635] block text-base leading-[22.4px] underline mb-8">FAQ page</a>
              <a class="text-[#C33635] text-base block w-full text-center font-medium leading-[22.4px] py-4 px-8 rounded-[8rem] border border-[#C33635]" href="{{ routes.account_logout_url }}">
                Log out
              </a>
           </div>
        </div>
        <div id="profile" class="p-[1.5rem] lg:p-12">
            <h1 class="text-3xl lg:text-[4rem] font-medium leading-[4.8rem] -tracking-[.04rem] text-[#1c1c1c] mb-4 lg:mb-10" >Hello, {{ customer.first_name }}</h1>
            <div class="flex flex-col gap-y-6">
                <div class="information_box !w-full lg:!w-[630px]">
                    <div class="information_header">
                        <span>Personal information</span>
                        <button class="hidden" data-edit="personal">Edit</button>
                        <button class="information_save">Save</button>
                    </div>
                    <div class="customer_data">
                        <span>{{ customer.name }}</span>
                        <span>{{ customer.email }}</span>
                    </div>
                    <div class="customer_editform flex-col gap-y-5">
                        <div class="flex justify-between gap-x-10">
                            <div class="form_input">
                                <label for="name">Name</label>
                                <input type="text" id="name" value="{{ customer.first_name }}">
                            </div>
                            <div class="form_input">
                                <label for="surname">Surname</label>
                                <input type="text" id="surname" value="{{ customer.last_name }}">
                            </div>
                        </div>
                        <div class="form_input">
                            <label for="email">Email</label>
                            <input type="email" id="email" value="{{ customer.email }}">
                        </div>
                    </div>
                </div>
                <div class="information_box !w-full lg:!w-[630px]">
                    <div class="information_header">
                        <span>Shipping address</span>
                        <button data-edit="address">Edit</button>
                        <button class="information_save">Save</button>
                    </div>
                    <div class="customer_data">
                        <span>{{ customer.name }}</span>
                        <span>{{ customer.email }}</span>
                    </div>
                    <div class="customer_editform flex-col gap-y-5">
                        {% assign address = customer.default_address %}
                        {%- form 'customer_address', address -%}
