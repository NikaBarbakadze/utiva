    },
	  {
      "type": "url",
      "id": "btn_url_1",
      "label": "Button URL 1"
    },
    {
      "type": "image_picker",
      "id": "btn_img_2",
      "label": "Button Image 2"
    },
    {
      "type": "text",
      "id": "btn_text_2",
      "label": "Button Text 2",
      "default": "App Store"
    },
    {
      "type": "url",
      "id": "btn_url_2",
      "label": "Button URL 2"
    }
  ],
  "presets": [
    {
      "name": "UTI Tracker Main Banner"
    }
  ]
}
{% endschema %}
