{{ 'uti-tracker-interfaces.css' | asset_url | stylesheet_tag }}

<style>
  #shopify-section-{{ section.id }} .uti-tracker-interfaces {
  	background-color: {{ section.settings.bg_color }};
  }
</style>

<div class="uti-tracker-interfaces">
  <div class="uti-tracker-interfaces__container">
    <div class="uti-tracker-interfaces__container-inner">
      {% for block in section.blocks %}
        <div class="uti-tracker-interfaces__block">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: 'original' }}" alt="{{ block.settings.image.alt }}">
          {% endif %}
          {% if block.settings.title != blank %}
            <p>{{ block.settings.title }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "UTI Tracker Interfaces",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#F8F4F1"
      }
    ],
    "blocks": [
      {
        "type": "ui",
        "name": "User Interface",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Interface Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "UTI Tracker Interfaces"
      }
    ]
  }
{% endschema %}
