<div class="bm-container-how-it-works">
    <div class="bm-how-it-works-para"><h3>{{ section.settings.bm_how_it_works_para }}</h3></div> 
    <div class="bm-main-container-how-it-works">
     <div class="bm-how-it-works-heading"><p>{{ section.settings.bm_how_it_works_heading }}</p></div>
      <div class="bm-how-it-works-container-block">
        {% for block in section.blocks %}
            
                <div class="bm-how-it-works-blocks">
                    <div class="bm-text1"><p>{{ block.settings.bm_text1 }}</p></div>
                        <div class="bm-icon"><img src="{{ block.settings.bm_icon | img_url:'master' }}" /></div>
                        <div class="bm-text2"><p> {{ block.settings.bm_text2 }}</p></div>
                </div>
         
        {% endfor %}
    </div>
    </div>
</div>

    

    
    
{% schema %}
    
    {
        "name": "Bm How It Works",
        "settings": [
          {
            "type": "textarea",
            "id": "bm_how_it_works_para",
            "label": "Heading"
          },
          {
            "type": "text",
            "id": "bm_how_it_works_heading",
            "label": "Paragraph"
          }
        ],
        "blocks": [
            {
              "name": "Blocks",
              "type": "Blocks",
              "settings": [
                {
                  "type": "text",
                  "id": "bm_text1",
                  "label": "Paragraph"
                },
                {
                  "type": "image_picker",
                  "id": "bm_icon",
                  "label": "Image"
                },
                {
                    "type": "text",
                    "id": "bm_text2",
                    "label": "Paragraph"
                }
              ]
            }
          ]
    }
{% endschema %} 