			"content": "Section settings"
		},
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		},
		{
			"type": "header",
			"content": "Button settings"
		},
		{
			"type": "text",
			"id": "button_text",
			"label": "Button Text"
		},
		{
			"type": "url",
			"id": "button_url",
			"label": "Button link"
		}
	],
	"blocks": [
		{
			"name": "Doctors",
			"type": "text",
			"settings": [
				{
					"type": "image_picker",
					"id": "doctors_image",
					"label": "Image"
