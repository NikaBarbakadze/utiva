<section class="page-width">
  {% for block in section.blocks %}
    <div class="cta-wrapper">
      <p class="text">{{ block.settings.text }}</p>
      <a href="{{ block.settings.cta_link }}" class="btn">{{ block.settings.cta_label }}</a>
    </div>
  {% endfor %}
</section>
{% schema %}
  {
    "name": "Rewards CTAs",
    "class": "rewards-cta",
    "blocks":[
      {
        "type": "cta",
        "name": "CTA Block",
        "settings":[
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "text",
            "id": "cta_label",
            "label": "CTA Label"
          },
          {
            "type": "url",
            "id": "cta_link",
            "label": "CTA Link"
          }
        ]
       }
     ]
  }
{% endschema %}
