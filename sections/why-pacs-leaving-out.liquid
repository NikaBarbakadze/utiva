<div class="bg-[#FCFCFA]">
  <div class="page-width py-[6rem] px-6 md:pt-[8rem] md:pb-[12rem]">
    <h2 class="text-[3.2rem] font-medium leading-[3.84rem] -tracking-[0.064rem] text-[#1c1c1c] mb-8 md:mb-10 md:text-center md:text-[4.8rem] md:-tracking-[0.096rem] md:leading-[5.28rem]">{{ section.settings.title }}</h2>
    <div class="flex flex-col gap-y-4 md:flex-row md:gap-x-6">
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2 md:w-full">
        {% for block in section.blocks %}
          <div class="p-8 bg-white rounded-[1.6rem] flex flex-col gap-y-4 md:gap-y-6">
            <img
              class="w-[5.6rem] h-[5.6rem]"
              src="{{ block.settings.icon | img_url: 'master' }}"
              alt="icon">
            <p class="text-base lg:text-lg font-normal text-[rgba(28,28,28,0.8)]">{{ block.settings.content }}</p>
          </div>
        {% endfor %}
      </div>
      <img
        class="rounded-[1.6rem] md:w-[50rem] md:rounded-[2.4rem]"
        src="{{ section.settings.img | img_url: 'master' }}"
        alt="section hero">
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "What we are leaving out",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "And what we leave out is just as important"
      }, {
        "type": "image_picker",
        "id": "img",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "name": "Property",
        "type": "property",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          }, {
            "type": "inline_richtext",
            "id": "content",
            "label": "Content"
          }
        ]
      }
    ]
  }
{% endschema %}