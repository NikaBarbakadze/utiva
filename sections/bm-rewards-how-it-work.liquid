<div class="bm-rewards-how-it-work">
    <div class="bm-rewards-how-it-work-main">
        {% if section.settings.bm_rewards_how_it_work_title != blank %}
        <h2 class="bm-rewards-how-it-work-title">{{section.settings.bm_rewards_how_it_work_title}}</h2>
        {% endif %}
        <div class="bm-rewards-how-it-work-content">
            {% for block in section.blocks %}
            <div class="bm-rewards-how-it-work-item">
                {% if block.settings.bm_rewards_how_work_title != blank %}
                <h3>{{block.settings.bm_rewards_how_work_title}}</h3>
                {% endif %}
                {% if block.settings.bm_rewards_how_it_work_subtitle != blank %}
                <h2>{{block.settings.bm_rewards_how_it_work_subtitle}}</h2>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        {% if section.settings.bm_rewards_how_it_work_description != blank %}
        <p class="bm-rewards-how-it-work-description">{{section.settings.bm_rewards_how_it_work_description}}</p>
        {% endif %}
    </div>
</div>

{% schema %}
    {
      "name": "How It Work",
      "settings": [
           {
              "type": "text",
              "id": "bm_rewards_how_it_work_title",
              "label": "Heading"
           },
           {
            "type": "textarea",
            "id": "bm_rewards_how_it_work_description",
            "label": "Description"
           }
      ],
      "blocks": [
       {
         "name": "content",
         "type": "text",
         "settings": [
           {
              "type": "text",
              "id": "bm_rewards_how_work_title",
              "label": "Title"
           },
           {
              "type": "text",
              "id": "bm_rewards_how_it_work_subtitle",
              "label": "Subtitle"
           }
         ]
       }
     ]
    }
  {% endschema %}
