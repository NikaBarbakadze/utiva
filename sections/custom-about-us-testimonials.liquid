<div class="bg-[#ceb39e1f]">
  <div class="page-width py-12 px-4 md:pt-20 md:pb-[10rem]">
    <h2 class="text-[#1c1c1c] text-[3.2rem] leading-[3.84rem] -tracking-[0.064rem] font-medium text-center mb-10 md:mb-20 md:text-5xl md:leading-[5.28rem] md:-tracking-[0.096rem]">
      {{ section.settings.title }}
    </h2>
    <div class="flex flex-col gap-y-10 md:flex-row md:gap-x-[8.8rem] md:justify-center">
      {% for block in section.blocks %}
        <div class="md:w-[42rem]">
          <img
            class="rounded-[2.4rem] mb-6"
            src="{{ block.settings.avatar | img_url: 'master' }}"
            alt="{{ block.settings.name }}">
          <p class="text-base leading-[2.24rem] font-normal text-[#1c1c1ccc] mb-5 md:text-xl md:leading-[2.8rem]">{{ block.settings.quote }}</p>
          <p class="text-base font-medium leading-[2.24rem] text-[#1c1c1c] md:text-lg md:leading-[2.52rem]">{{ block.settings.name }}</p>
          <p class="text-base font-normal opacity-60 leading-[2.24rem] text-[#1c1c1c] md:text-base md:leading-[2.24rem]">{{ block.settings.profession }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Testimonials",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "label": "Section Title",
        "id": "title"
      }
    ],
    "blocks": [
      {
        "type": "testimonial",
        "name": "Testimonial",
        "settings": [
          {
            "type": "image_picker",
            "label": "Avatar",
            "id": "avatar"
          }, {
            "type": "text",
            "label": "Quote",
            "id": "quote"
          }, {
            "type": "text",
            "label": "Name",
            "id": "name"
          }, {
            "type": "text",
            "label": "Profession",
            "id": "profession"
          }
        ]
      }
    ]
  }
{% endschema %}