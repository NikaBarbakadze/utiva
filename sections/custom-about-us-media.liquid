<style>
  @media screen and (min-width: 770px) {
    .custom-blog-card {
      width: 100%;
      max-width: 40rem;
    }
  }
</style>

<div class="page-width pt-10 pb-[6rem] md:pb-20 px-6">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center md:mb-10">
    <h2 class="text-[3.2rem] leading-[3.84rem] -tracking-[0.064rem] text-[#1c1c1c] font-medium mb-3 md:mb-0 md:text-4xl md:leading-[4.32rem] md:-tracking-[0.072rem]">{{ section.settings.title }}</h2>
    <p class="text-[#1c1c1ccc] text-base font-normal leading-[2.24rem] mb-6 md:mb-0 md:text-xl md:leading-[2.8rem]">{{ section.settings.subtitle }}</p>
    <a href="{{ section.settings.cta_url }}" class="hidden md:!block md:w-[19rem] font-medium py-4 w-full border border-[#C33635] rounded-[8rem] text-base leading-[2.24rem] text-center text-[#C33635]">See all</a>
  </div>
  <div class="flex flex-col gap-y-8 mb-6 md:flex-row md:justify-start md:gap-x-6 md:mb-0">
    {% for block in section.blocks %}
      <a href="{{ block.settings.url }}" class="custom-blog-card">
        <div class="relative">
            <img src="{{ block.settings.image | img_url: "700x" }}" loading="lazy" alt="">
        </div>
        <div class="flex gap-2 items-center my-2 text-[#777777] text-sm lg:text-base font-normal">
            <span class="text-sm">
                {{ block.settings.date }}
            </span>
        </div>
        <div class="flex flex-col gap-2">
            <h2 class="text-[22px] font-medium text-[#1C1C1C]">{{ block.settings.title }}</h2>
            <p class="text-sm text-[#767675] font-normal underline">{{ block.settings.domain }}</p>
        </div>
    </a>
    {% endfor %}
  </div>
  <a href="{{ section.settings.cta_url }}" class="block md:hidden font-medium py-4 w-full border border-[#C33635] rounded-[8rem] text-base leading-[2.24rem] text-center text-[#C33635]">See all</a>
</div>

{% schema %}
  {
    "name": "Media",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }, {
        "type": "textarea",
        "id": "subtitle",
        "label": "Subtitle"
      }, {
        "type": "url",
        "id": "cta_url",
        "label": "Button URL"
      }
    ],
    "blocks": [
      {
        "name": "press",
        "type": "press",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Press Image"
          },
          {
            "type": "text",
            "id": "date",
            "label": "Press Date"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Press Title"
          },
          {
            "type": "url",
            "id": "url",
            "label": "Press URL"
          },
          {
            "type": "text",
            "id": "domain",
            "label": "Press Domain"
          }
        ]
      }
    ]
  }
{% endschema %}