{{ 'sticky-promo-banner.css' | asset_url | stylesheet_tag }}
{% if section.settings.text != blank %}
	<div
		class='sticky-promo-banner'
		style='
			background-color: {{ section.settings.bg-color }};
			color: {{ section.settings.text-color }}
		'
	>
		<div class='sticky-promo-banner__content'>{{ section.settings.text }}</div>
	</div>
{% endif %}

{% schema %}
{
	"name": "Promo banner",
	"tag": "section",
	"settings": [
		{
			"type": "richtext",
			"label": "Text",
			"id": "text"
		},
		{
			"type": "color",
			"id": "bg-color",
			"label": "Background color",
			"default": "#52B7AF"
		},
		{
			"type": "color",
			"label": "Text color",
			"id": "text-color",
			"default": "#fff"
		}
	]
}
{% endschema %}
