{{ 'header-mobile.css' | asset_url | stylesheet_tag }}
{{ 'header-mobile.js' | asset_url | script_tag }}

<div class='header-mob hovered-perma'>
	<div class='header-mob__info'>
		<button class='data-menu-button' id='menuButton'>
			<div class='menu-btn__icon-burger--open'>
				{% render 'icon', icon: 'burger-32' %}
			</div>

			<div class='menu-btn__icon-burger--close'>
				{% render 'icon', icon: 'close-32' %}
			</div>
		</button>
		<div class='header-mob__info--logo'>
			<a href='{{ shop.url }}'>
				{% if logo != blank %}
						<img src="https://cdn.shopify.com/s/files/1/0060/4677/7455/files/Utiva_Logo.svg?v=1700551080" alt="" srcset="https://cdn.shopify.com/s/files/1/0060/4677/7455/files/Utiva_Logo.svg?v=1700551080&amp;width=200 200w" width="223" height="144" loading="lazy" sizes="10vw" class="header-desktop__logo--img logo-2 !max-w-none !max-h-none !w-[76px] !block">
				{% else %}
					<a href='{{ shop.url }}'> {{ shop.name }}</a>
				{% endif %}
			</a>
		</div>

		<div class='header-mob__info--icons flex gap-1'>
			<a href="/account">
				{% render 'icon', icon: 'account-32' %}
			</a>
			<a href="javascipt:void()" class="relative cart-icon-bubble-mobile" id="cart-icon-bubble-mobile" onclick="document.querySelector('#cart-icon-bubble').click();">
				{% render 'icon', icon: 'cart-32' %}
				<span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
				{%- if cart != empty -%}
					<div class="cart-count-bubble">
						{%- if cart.item_count < 100 -%}
							<span aria-hidden="true">{{ cart.item_count }}</span>
						{%- endif -%}
						<span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
					</div>
				{%- endif -%}
			</a>
		</div>

		{% render 'header-mob-drawer',
			logo: logo,
			menu: mob_menu,
			mega_menu_blocks: mega_menu_blocks,
			toggle: toggle,
			toggle_url: toggle_url,
			toggle_text_before: toggle_text_before,
			toggle_text_after: toggle_text_after
		%}
	</div>
</div>
