{% assign product1_comp = 0 %}	
{% assign product2_comp = 0 %}	
{% assign product3_comp = 0 %}

<div class="bm-stronger-together">
  
  <div class="bm-stronger-together-single">
    
    {% assign productone = all_products[product.metafields.bm_pdp.bm_stronger_productone_handle] %}
    {% if productone != blank %}
    <div class="bm-Product-img">
      {{section.settingsbm_productone_handle}}
      <img src="{{ productone.featured_image | img_url:'master' }}" />
    </div>
    <div class="bm-product__title">
      <label class="bm-product__title-container">
        <input type="checkbox" checked="checked" class="bm-product-id-check-moba" data-id="{{ productone.variants.first.id}}" data-regular-price="{{ productone.price | money }}" data-save-price="{{ productone.compare_at_price | minus: productone.price |money }}">
        <span class="bm-product__title-checkmark"></span>
        {{ productone.title }}
      </label>

    </div>
    <div class="bm-product-description">{{product.metafields.bm_pdp.bm_productone_description}}</div>
    <div class="bm-product-stronger-price">
      <div class="grid-product__price mb-2 mt-2">
        <span class="visually-hidden">{{ 'products.general.regular_price' | t }}</span>
        {% if productone.compare_at_price > 0 %}
        <del class="bm-product-stronger-price-del">{{ productone.compare_at_price | money }}</del>
        {% endif %}
        <span class="visually-hidden">{{ 'products.general.sale_price' | t }}</span>
        <span class="bm-product-stronger-price-main">
          from {{ productone.price  | money }} 
        </span>
      </div>
      {% if productone.compare_at_price > 0 %}
      {% assign product1_comp = productone.compare_at_price | minus: productone.price %}
      <div class="bm-product-stronger-price-save">{{product1_comp | money}}</div>
      {% endif %}
    </div>
    <div class="bm-product-stronger-review">
      <span class=" stamped-product-reviews-badge" data-id="{{ productone.id }}" data-product-title="{{productone.title}}" data-product-type="{{productone.type}}" style="display:block;" data-product-sku="{{ productone.handle }}"></span>
    </div> 
    {% endif %}
  </div>
  <div class="bm-stronger-together-single">
    {% assign producttwo = all_products[product.metafields.bm_pdp.bm_stronger_producttwo_handle] %}
    {% if producttwo != blank %}
    <div class="bm-Product-img">
      <img src="{{ producttwo.featured_image | img_url:'master' }}" />
    </div>
    <div class="bm-product__title">
      <label class="bm-product__title-container">
