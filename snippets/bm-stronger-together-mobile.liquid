        <span class="bm-product__title-checkmark"></span>
        {{ producttwo.title }}
      </label>


    </div>
    <div class="bm-product-description">{{product.metafields.bm_pdp.bm_producttwo_description}}</div>
    <div class="bm-product-stronger-price">
      <div class="grid-product__price mb-2 mt-2">
        <span class="visually-hidden">{{ 'products.general.regular_price' | t }}</span>
        {% if producttwo.compare_at_price > 0 %}
        <del class="bm-product-stronger-price-del">{{ producttwo.compare_at_price | money }}</del>
        {% endif %}
        <span class="visually-hidden">{{ 'products.general.sale_price' | t }}</span>
        <span class="bm-product-stronger-price-main">
          from {{ producttwo.price  | money }} 
        </span>
      </div>
      {% if producttwo.compare_at_price > 0 %}
      {% assign product2_comp = producttwo.compare_at_price | minus: producttwo.price %}	
      <div class="bm-product-stronger-price-save">{{product2_comp | money}}</div>
      {% endif %}
    </div>
    <div class="bm-product-stronger-review">
      <span class=" stamped-product-reviews-badge" data-id="{{ producttwo.id }}" data-product-title="{{producttwo.title}}" data-product-type="{{producttwo.type}}" style="display:block;" data-product-sku="{{ producttwo.handle }}"></span>
    </div>
    {% endif %}
  </div>
  <div class="bm-stronger-together-single">
    {% assign productthree = all_products[product.metafields.bm_pdp.bm_stron_productthree_handle] %}
    {% if productthree != blank %}
    <div class="bm-Product-img">
      <img src="{{ productthree.featured_image | img_url:'master' }}" />
    </div>
    <div class="bm-product__title">
