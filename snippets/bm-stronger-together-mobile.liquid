      <div class="bm-product-stronger-price-save">{{product3_comp | money}}</div>
      {% endif %}
    </div>
    <div class="bm-product-stronger-review">
      
      <span class=" stamped-product-reviews-badge" data-id="{{ productthree.id }}" data-product-title="{{productthree.title}}" data-product-type="{{productthree.type}}" style="display:block;" data-product-sku="{{ productthree.handle }}"></span>
    </div>
    {% endif %}
  </div>
  <div class="bm-stronger-together-single">
    <div class="bm-stronger-together-single-details">
      <h2>Total Price</h2>
      <p>of selected items</p>
      {% assign bm_total_price = productone.price | money %}	
      {% assign bm_total_saving = product1_comp %}	
      	
      <div class="bm-stronger-price">	
        <h3 class="bm-bundle-price-moba">{{bm_total_price}}</h3>	
        <h2 class="bm-bundle-saving-moba">{% if bm_total_saving > 0 %}You Save {{bm_total_saving | money}}{% endif %}</h2>	
      </div>
      <button class="bm-add-to-cart-moba btn btn--full add-to-cart">
        <span>Add To Cart</span>
      </button>
    </div>

  </div>
</div>