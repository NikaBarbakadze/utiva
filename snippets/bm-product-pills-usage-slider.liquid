<div class="bm-product-pills-usage-slider">
  {% assign bm_pills_usage_block_content = product.metafields.bm_pdp.bundle_label_desc | split: '***' %}
  {% for item in bm_pills_usage_block_content %}
  <div> 
    <div class="bm-product-pills-usage-slider-content">
      {{item}}
    </div>
  </div>
  {% endfor %}
</div>


<style>
  .bm-product-pills-usage-slider {
    padding: 40px 63px 0;
    max-width: 906px;
    margin: 0 auto;
  }
  .bm-product-pills-usage {
    padding: 40px 40px 0;
    max-width: 940px;
    margin: 0 auto;
  }
  .bm-product-pills-usage-block {
    display: flex;
    margin-bottom: 15px;
  }
  .bm-product-pills-usage-top {
    margin-bottom: 25px;
  }
  .bm-product-pills-usage-block.bm-product-pills-usage-block-top {
    margin-left: 30px;
  }
  h2.bm-product-pills-usage-title {
    font-family: 'Nunito';
    font-style: normal;
    font-weight: bold;
    font-size: 20px;
    line-height: 38px;
    letter-spacing: 0.02em;
    color: #212529;
    margin-bottom: 10px;
  }
  .bm-product-pills-usage-bottom h2.bm-product-pills-usage-title {
    font-family: 'Nunito';
    font-style: normal;
    font-weight: bold;
    font-size: 20px;
    line-height: 38px;
    letter-spacing: 0.02em;
    color: #212529;
    margin-bottom: 0;
  }
  .bm-product-pills-usage-bottom .bm-product-pills-usage-block {
    margin-bottom: 20px;
  }
  .bm-product-pills-usage-block-description-bottom {
    margin-left: 30px;
  }

  h2.bm-product-pills-usage-block-title {
    font-family: 'Nunito';
    font-style: normal;
    font-weight: bold;
    font-size: 18px;
    line-height: 32px;
    margin: 0 0 5px 0px;
    color: #212529;
  }
  p.bm-product-pills-usage-block-description {
    font-family: 'Nunito';
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 24px;
    color: #212529;
  }

  /* slick */
  .bm-product-pills-usage-slider button.slick-prev.slick-arrow {
    display: block !important;
    background: #FFF;
    box-shadow: 1px 1px 6px rgba(0, 0, 0, 0.4);
    border-radius: 50px;

    width: 50px;
    height: 50px;
    left: 0;
  }
  .bm-product-pills-usage-slider button.slick-next.slick-arrow{
    display: block !important;
    background: #FFF;
    box-shadow: 1px 1px 6px rgba(0, 0, 0, 0.4);
    border-radius: 50px;
    width: 50px;
    height: 50px;
    right: 0;
  }

  .bm-product-pills-usage-slider .slick-next:before {
    background: url(https://cdn.shopify.com/s/files/1/0060/4677/7455/files/arrow_2.png?v=1642673474) no-repeat;
    content: "";
    width: 60%;
    transform: rotate(270deg) !important;
    height: 100%;
    position: absolute;
    background-size: 100%;
    top: 0;
    right: 0;
  }
  .bm-product-pills-usage-slider .slick-prev:before {
    background: url(https://cdn.shopify.com/s/files/1/0060/4677/7455/files/arrow_2.png?v=1642673474) no-repeat;
    content: "";
    width: 60%;
    transform: rotate(90deg) !important;
    height: 100%;
    position: absolute;
    background-size: 100%;
    top: 0;
    right: 0;
  }

  .bm-product-pills-usage-slider .slick-dots {
    display: flex;
    justify-content: center;
    margin: 0;
    padding: 16px 0;
    list-style-type: none;
    bottom: -30px;
    left: 0 !important;
    align-items: center;
    width: 100%;
  }
  .bm-product-pills-usage-slider .slick-dots li {
    margin: 0 7px;
  }
  .bm-product-pills-usage-slider .slick-dots button {
    display: block;
    width: 11px !important;
    height: 11px !important;
    padding: 0;
    border: none;
    border-radius: 100%;
    background: rgba(196, 196, 196, 0.5);
    text-indent: -9999px;

  }

  .bm-product-pills-usage-slider .slick-dots li.slick-active button {
    background: #C4C4C4;
    width: 14px!important;
    height: 14px!important;
  }
  .bm-product-pills-usage-slider-content h2 {
    font-size: 20px !important;
    color: #253C51 !important;
  }
  
  .bm-product-pills-usage-slider-content div {
    width: 100%;
    margin-left: 0 !important;
    color: #253C51 !important;
  }
  .bm-product-pills-usage-slider-content div p{
        font-size: 16px !important;
    line-height: 22px !important;
    color: #253C51 !important;
  }
  @media only screen and (max-width: 1024px) {
    .bm-product-pills-usage {
      max-width: 768px;
    }
    .bm-product-pills-usage-slider {
      padding: 40px 63px 0;
      max-width: 1000px;
      margin: 0 auto;
    }

  }
  @media only screen and (max-width: 768px) {
    .bm-product-pills-usage-slider {
      padding: 0 30px ;
    }
    .bm-product-pills-usage-slider button.slick-prev.slick-arrow {
      width: 30px;
      height: 30px;
      z-index: 1;
    }
    .bm-product-pills-usage-slider button.slick-next.slick-arrow {
      width: 30px;
      height: 30px;
      z-index: 1;
    }
  }
</style>

<script>
  $(document).ready(function(){
    $('.bm-product-pills-usage-slider').slick({
      dots: true,
      arrows: true,
      infinite: true,
      speed: 400,
      slidesToShow: 1,
      adaptiveHeight: true
    });
  });
</script>